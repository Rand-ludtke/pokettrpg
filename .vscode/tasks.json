{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build app for verification",
			"type": "shell",
			"command": "npm run build",
			"options": {
				"cwd": "${workspaceFolder}/app"
			},
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Make Windows build",
			"type": "shell",
			"command": "npm run electron:make",
			"options": {
				"cwd": "${workspaceFolder}/app"
			},
			"group": "build"
		},
		{
			"label": "Build app for verification",
			"type": "shell",
			"command": "npm run build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}