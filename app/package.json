{
  "name": "pokettrpg-app",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "main": "electron/main.mjs",
  "description": "Offline retro Pok√©mon TTRPG PC, team manager, and battle helper.",
  "author": "Rand L",
  "scripts": {
    "dev": "vite",
    "sync": "node scripts/sync-assets.mjs",
    "build": "npm run sync && tsc -b && vite build",
    "preview": "vite preview",
    "custom:add": "node scripts/add-custom-pokemon.mjs",
    "electron:dev": "npm run build && electron .",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:make": "npm run build && electron-builder -w",
    "electron:make:portable": "npm run build && electron-builder -w --portable"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0",
    "serve-static": "^2.2.0",
    "finalhandler": "^1.2.0",
    "@pkmn/sim": "^0.8.9",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.10",
    "electron": "^31.6.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.rand.pokettrpg",
    "productName": "Pokettrpg",
    "icon": "build/icon.ico",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
